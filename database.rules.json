{
    "rules": {
        "chats": {
            "$roleplayId": {
                "$channelId": {
                    "messages": {
                        ".read": "auth != null",
                        ".write": "auth != null",
                        "$messageId": {
                            ".validate": "newData.hasChildren(['content', 'userId', 'username', 'avatar', 'timestamp', 'channelId', 'roleplayId'])"
                        }
                    },
                    "typing": {
                        ".read": "auth != null",
                        ".write": "auth != null",
                        "$userId": {
                            ".validate": "newData.hasChildren(['userId', 'username', 'avatar', 'isTyping', 'timestamp']) && newData.child('userId').val() == auth.uid"
                        }
                    },
                    "read": {
                        ".read": "auth != null",
                        ".write": "auth != null",
                        "$userId": {
                            ".validate": "newData.hasChildren(['timestamp', 'userId']) && newData.child('userId').val() == auth.uid"
                        }
                    }
                }
            }
        },
        "presence": {
            "$roleplayId": {
                ".read": "auth != null",
                ".write": "auth != null",
                "$userId": {
                    ".validate": "newData.hasChildren(['userId', 'username', 'avatar', 'lastSeen', 'isOnline']) && newData.child('userId').val() == auth.uid"
                }
            }
        }
    }
}
